import { ChangeDetectorRef, OnDestroy, PipeTransform } from '@angular/core';
import { IntlService } from '../intl.service';
/**
 * @author Abdel El-medny
 *
 * Shows numbers based on the Intl API
 *
 * @see https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/NumberFormat
 */
export declare class IntlNumberPipe implements PipeTransform, OnDestroy {
    private changeDetectorRef;
    private $intl;
    private lastOutput;
    private lastInput;
    private stop$;
    constructor(changeDetectorRef: ChangeDetectorRef, $intl: IntlService);
    transform(value: number, opts?: Intl.NumberFormatOptions): string;
    ngOnDestroy(): void;
}
